
    <div class="row">

        <div class="thumbnail">
          <br/>
          <%= image_tag @post.image.url(:medium),  :style => "border: 4px solid #D7FFFE"  %></center> <br/>
          <div class="caption">
            <div class="page-header">
              <h1>  <%= @post.title %> <small> <%= @post.created_at %></small></h1>
            </div>



    <p><%= @post.content %></p>
            <% if user_signed_in? %>
          <%= link_to "Add Comment", new_post_comment_path(post_id: @post.id ), class:"btn btn-info" %>
              <%end %>
            <%= link_to 'Back', user_blog_path(id:@post.user_blog_id), class: "btn btn-danger" %>
          </div>
        </div>

    </div>





    <h2>Comments:</h2>
    <% @post.comments.each do |comment| %>
      <div class="panel panel-default">
        <div class="panel-heading"><h4>  <%= comment.title %> <small> <%= comment.created_at %></small></h4></div>
        <div class="panel-body">

      <%= comment.content %>

      <% if comment.user == current_user %>
            </div>
            <div class="panel-footer">
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%end %>

        </div>
      </div>
    <% end %>

  </div>


