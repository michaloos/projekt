<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">Posts:</div>

<table class="table">
  <thead>
    <tr>
      <th>User blog</th>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_blog_id %></td>
        <td><%= image_tag post.image.url(:thumb) %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <div class="panel-footer"><%= link_to 'New post', new_post_path %> </div>
</div>